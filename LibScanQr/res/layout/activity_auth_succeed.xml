<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName"
    android:orientation="vertical">
    <com.pasc.lib.widget.toolbar.PascToolbar
        android:id="@+id/toolbar"
        style="@style/BlackFontToolbar"
        android:background="@color/white"
        app:support_translucent_status_bar="true"
        app:title="登陆授权"
        app:action_icon="@null"

        />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39.5dp"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@mipmap/ic_auth_succe"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_333333"
        android:textSize="@dimen/text_size_18"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="登录授权成功"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f4f4f4">
        <TextView

            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="完成 （3s）"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/text_size_17"
            tools:background="@drawable/paschybrid_bg_radius_3"/>
        
    </LinearLayout>
</LinearLayout>
